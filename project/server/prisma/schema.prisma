generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        String      @id @default(uuid())
  name      String      @unique
  age       Int
  password  String
  scores    Scores[]
  exercises Exercises[]

  @@map("users")
}

model Scores {
  id     String @id @default(uuid())
  score  Int
  user   Users  @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("scores")
}

model Exercises {
  id             String  @id @default(uuid())
  name           String
  chances        Int     @default(3)
  allTestsPassed Boolean @default(false) @map("all_tests_passed")
  user           Users   @relation(fields: [userId], references: [id])
  userId         String  @map("user_id")

  @@map("exercises")
}
